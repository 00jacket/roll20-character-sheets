include ../fields.pug

.coreTab
  div
    .inlineBlock(style='vertical-align: top; width: 3.2in;'): include abilityScores.pug

    .inlineBlock(style='vertical-align: top; width: 5in;')
      div
        +labelledUnderlined('Gender')(style='width:1in;'): +input('text', 'gender')
        +labelledUnderlined('Age')(style='width: 0.5in;'): +input('text', 'age')
        +labelledUnderlined('Height')(style='width: 0.6in;'): +input('text', 'height')
        +labelledUnderlined('Weight')(style='width: 0.6in;'): +input('text', 'weight')
        include sizeSelect.pug
      div
        +labelledUnderlined('Homeland'): +input('text', 'homeland')
        +labelledUnderlined('Deity')(style='width: 1.5in;'): +input('text', 'deity')
        include alignmentSelect.pug
      div
        +labelledAbove('Appearance')(style='width: 100%;'): +textarea('appearance')(style='height: 0.6in;')
      div
        +labelledAbove('Languages')(style='width: 100%;'): +textarea('languages')(style='height: 0.4in;')
      div
        +labelledBoxH('Speed')(style='vertical-align: top;'): +input('text', 'speed')(style='width: 1in;')
        +labelledBoxH('Initiative')
          +labelledUnderlined('Total')(style='width: 0.5in'): +readOnlyBox('init_total')
          .mathOperator =
          +labelledUnderlined('Dex mod'): +readOnlyBox('dex_mod')
          .mathOperator +
          +labelledUnderlined('Misc')(style='width: 0.5in;'): +input('number', 'init_misc')

      div(style='width: 5.3in;'): include baseAttack.pug

  div
    include armorClass.pug
    .inlineBlock(style='float: right; vertical-align: top; width: 2.8in;')
      div: +labelledBoxH('Damage Reduction')(style='width: 100%;'): +input('text', 'damage_reduction')(style='width: 1in;')
      div: +labelledBoxH('Spell Resistance')(style='width: 100%;'): +input('number', 'spell_resistance')(style='width: 1in;')
  div: include savingThrows.pug

  include combatManeuverBonus.pug
